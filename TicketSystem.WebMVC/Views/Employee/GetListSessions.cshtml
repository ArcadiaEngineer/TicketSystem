@using TicketSystem.Entities.Dtos.SessionDtos
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<SessionDetailDto>
<div class="container">
    <div class="row mx-0">
        
        <div class="col-9 my-3">
            <h3>All Sessions</h3>
            <table class="table table-hover table-borderless">
                <thead class="table-light">
                    <tr>
                        <th scope="col">#</th>

                        <th scope="col">SessionTime</th>
                        <th scope="col">MovieName</th>
                        <th scope="col">SceneType</th>
                        
                        <th scope="col">Update</th>
                        <th scope="col">Delete</th>
                        <th scope="col">Detail</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@Model.IndexOf(item)</th>

                                <td>@item.SessionTime</td>
                                <td>@item.MovieName</td>
                                <td>@item.SceneType</td>
                                
                                <td>
                                    <form method="get" asp-action="UpdateSession" asp-controller="Employee" asp-route-id=@item.SessionId>
                                        <button class="btn btn-outline-info" type="submit">Update Session</button>
                                    </form>
                                </td>
                                <td>
                                    <form method="post" asp-action="DeleteSession" asp-controller="Employee" asp-route-id=@item.SessionId>
                                        <button class="btn btn-outline-info" type="submit">Delete</button>
                                    </form>
                                </td>
                                
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
