
@model Ticket
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="section-header">
    <div class="container">
        <div class="row">

            <div class="col-lg-12">
                <h1 class="page-header">Ticket Details</h1>
            </div>

        </div>
    </div> <!-- /.container -->
</div> <!-- /.section-colored -->

<div class="container container-int">

    <ol class="breadcrumb">
        <li><a href="/Home/">Home</a></li>
        <li class="active">@ViewBag.Session.MovieName</li>
    </ol>

    <div class="row">

        
        <div class="col-md-8">
            
            <div class="form-group">
                     <h3 >Select Seat:</h3>
                    <select asp-items="@ViewBag.Seats" id="seats" onchange="showSessionDiv()" class="form-control">
                    </select>
            </div>
             <form asp-action="GetTicketOfSession" method="post" asp-controller="Customer" enctype="multipart/form-data">

                <div class="form-group mb-3">
                    <h1 class="fw-light">@ViewBag.Session.MovieName</h1>
                    
                    
                    
                    
                </div>
                <div class="form-group mb-3">
                   <p class="lead text-muted">@ViewBag.Session.SessionTime</p>
                </div>
                <div class="form-group mb-3">
                    <p class="lead text-muted">@ViewBag.Session.SceneType</p>
                </div>
                <div class="form-group mb-3">
                    <p class="lead text-muted">Your price is 50 TL</p>
                </div>
                <input asp-for="@Model.SessionId" type="hidden" class="form-control" value="@ViewBag.Session.SessionId"  />
                <input asp-for="@Model.CustomerId" type="hidden" class="form-control" value="1" />
                <input asp-for="@Model.Price" type="hidden" class="form-control" value="50" />
                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
                
                
            </form>
            
            
        </div>

    </div>
   

</div><!-- /.container -->

