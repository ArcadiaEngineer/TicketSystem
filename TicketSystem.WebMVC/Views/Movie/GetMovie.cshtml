@using TicketSystem.Entities.Dtos.MovieDtos
@model MovieDetailDto
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="section-header">
    <div class="container">
        <div class="row">

            <div class="col-lg-12">
                <h1 class="page-header">Ürün Detayı</h1>
            </div>

        </div>
    </div> <!-- /.container -->
</div> <!-- /.section-colored -->

<div class="container container-int">

    <ol class="breadcrumb">
        <li><a href="/Home/">Home</a></li>
        <li><a href="/Product/Movie">Movie</a></li>
        <li class="active">@Model.MovieName</li>
    </ol>

    <div class="row">



        <div class="col-md-8">

            <div class="pro-img-details">
                <img id="large-image" class="img-responsive" src="[@Model.MovieBanner]" alt="Portfolio 1">
            </div>
            
        </div>

        <div class="col-md-4">
            <h3><small>Category</small></h3>
            <small>@Model.CategoryName</small>
            <h3><small>Modeli</small></h3>
            <p><small>@Model.MovieVisionDate</small></p>
            <h3>Review</h3>
            <p class="text-justify">@Model.MovieReview</p>

        </div>

    </div>
 

</div><!-- /.container -->

