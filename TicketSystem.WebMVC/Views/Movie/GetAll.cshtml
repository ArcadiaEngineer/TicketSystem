@model List<MovieListingDto>

@if (!User.Identity!.IsAuthenticated)
{
    @await Component.InvokeAsync("IntroducingComponent")
}
else
{
    <div class="row mx-0">
        <div class="col-3  my-3 mx-0">
            <h3>Last Added</h3>
            @await Component.InvokeAsync("LastAddedMoviesComponent")
        </div>
        <div class="col-9 my-3">
            <h3>All Movies</h3>
            <table class="table table-hover table-borderless">
                <thead class="table-light">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Movie Release Date</th>
                        <th scope="col">Movie Vision Date</th>
                        <th scope="col">Movie Age Limit</th>
                        <th scope="col">Movie Name</th>
                        <th scope="col">Movie IMDB</th>
                        <th scope="col">Movie Banner</th>
                        @if (User.IsInRole("Customer"))
                        {
                            <th scope="col">Buy</th>
                        }
                        @if (User.IsInRole("Employee"))
                        {
                            <th scope="col">Update</th>
                        }
                        <th scope="col">Detail</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@Model.IndexOf(item)</th>
                                <td>@item.MovieReleaseTime</td>
                                <td>@item.MovieVisionDate</td>
                                <td>@item.MovieAgeLimit</td>
                                <td>@item.MovieName</td>
                                <td>@item.MovieIMDB</td>
                                @{
                                    var base64 = Convert.ToBase64String(item.MovieBanner!);
                                    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                                }
                                <td><img src="@imgSrc" width="80" height="80"></td>
                                @if(User.IsInRole("Customer"))
                                {
                                    <td>
                                    <form method="get" asp-action="BuyTicket" asp-controller="Customer" asp-route-id=@item.MovieId>
                                        <button class="btn btn-outline-danger" type="submit">Buy Ticket</button>
                                    </form>
                                </td>
                                }
                                @if (User.IsInRole("Employee"))
                                {
                                    <td>
                                        <form method="get" asp-action="Update" asp-controller="Movie" asp-route-id=@item.MovieId>
                                            <button class="btn btn-outline-info" type="submit">Update Movie</button>
                                        </form>
                                    </td>
                                }
                                <td>
                                    <form method="get" asp-action="MovieDetail" asp-controller="Movie" asp-route-id=@item.MovieId>
                                        <button class="btn btn-outline-danger" type="submit">See Movie Detail</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
}