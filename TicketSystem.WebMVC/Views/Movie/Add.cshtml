@model MovieCreateDto


<div class="container my-5">

    <h1>Save Movie</h1>

    <div class=col-md-6>

        <form asp-action="Add" method="post" asp-controller="Movie" enctype="multipart/form-data">

            <div class="form-group mb-3">
                <label asp-for="@Model.MovieName"></label>
                <input asp-for="@Model.MovieName" class="form-control" />
                <span asp-validation-for="@Model.MovieName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label> Banner : </label>
                <input type="file" name="formFile" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="@Model.MovieAgeLimit"></label>
                <input asp-for="@Model.MovieAgeLimit" class="form-control" />
                <span asp-validation-for="@Model.MovieAgeLimit" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="@Model.MovieIMDB"></label>
                <input asp-for="@Model.MovieIMDB" class="form-control" />
                <span asp-validation-for="@Model.MovieIMDB" class="text-danger"></span>
            </div>
           
            <div class="form-group mb-3">
                <label asp-for="@Model.MovieVisionDate"></label>
                <input asp-for="@Model.MovieVisionDate" class="form-control" />
                <span asp-validation-for="@Model.MovieVisionDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label>Category :</label>
                <select asp-for="MovieCategoryId" asp-items="@ViewBag.Categories" class="form-select">
                </select>
            </div>
            <div class="form-group mb-3">
                <label asp-for="@Model.MovieReview"></label>
                <textarea asp-for="@Model.MovieReview" class="form-control" rows="5" /></textarea>
                <span asp-validation-for="@Model.MovieReview" class="text-danger"></span>
            </div>
            <hr class="my-4">
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>
        </form>

    </div>

</div>